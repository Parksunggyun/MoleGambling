<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
            android:background="@drawable/bg_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/currLevelImgView"
                android:src="@drawable/icon_game_level1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="32.6dp"
                android:layout_marginTop="20dp"
                android:layout_width="112dp"
                android:layout_height="56dp"/>

        <android.support.v7.widget.AppCompatImageView
                android:background="@drawable/border_lgt_blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/showMenuImgView"
                android:src="@drawable/icon_close"
                android:scaleType="fitCenter"
                android:layout_marginTop="22.6dp"
                android:layout_marginEnd="20.6dp"
                android:padding="6dp"
                android:layout_width="56dp"
                android:layout_height="50.6dp"/>

        <android.support.v7.widget.RecyclerView
                android:layout_marginStart="126.8dp"
                android:layout_marginEnd="126.8dp"
                android:layout_marginTop="166dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/colorBtnListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <View
                android:visibility="gone"
                android:id="@+id/introView"
                android:background="@drawable/colorblock_001_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </android.support.constraint.ConstraintLayout>
</layout>